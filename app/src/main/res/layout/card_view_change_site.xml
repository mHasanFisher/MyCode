<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/isActiveImage"
            android:layout_width="30dp" android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical|end"
            android:src="@mipmap/icon_one_tick"

    />


    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:text="@string/domain_name"
              android:gravity="center"
              android:textSize="14sp"
              android:textStyle="bold"
                android:id="@+id/siteTitleTV"
              android:layout_weight="2"
    />

    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:text="@string/domain_name"
              android:gravity="center"
              android:textSize="13sp"
              android:id="@+id/siteTV"
              android:layout_weight="3"
    />




</LinearLayout>