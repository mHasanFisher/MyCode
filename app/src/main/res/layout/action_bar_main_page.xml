<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:background="@color/colorPrimary"

              android:id="@+id/connectionStatusLL"
              android:orientation="horizontal"
              android:layout_gravity="start"
              android:gravity="start"
              android:elevation="5dp"
              tools:showIn="@layout/fragment_all_chats"
              android:layout_height="?attr/actionBarSize" tools:targetApi="lollipop">





    <TextView
            android:id="@+id/connectionStatusTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="@string/connection_status"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
    />

    <ImageButton
            android:id="@+id/changeDomainImageButt"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_change_site"
            android:scaleType="centerInside"
            style="@style/Base.Widget.AppCompat.Button.Borderless"

    />

</LinearLayout>