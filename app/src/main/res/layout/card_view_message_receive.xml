<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layoutDirection="ltr"
              android:layout_gravity="left"
              android:gravity="left"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:paddingBottom="5dp"
              android:paddingTop="5dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">


    <LinearLayout

            android:id="@+id/messageSendLL"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="left"
            android:gravity="left"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


        <LinearLayout
                android:id="@+id/messageInnerReceiveLL"
                android:layout_width="wrap_content"
                      android:layout_gravity="end"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical|left"
                      android:layoutDirection="ltr"
                      android:minWidth="100dp"
                      android:minHeight="40dp"
                      android:orientation="vertical"
                      android:background="@drawable/background_message_receive_selector"
        >


            <TextView
                    android:id="@+id/receivedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="15dp"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/message_receive_text"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textColorLink="@color/profileGray"
                    android:autoLink="web"

            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:layoutDirection="rtl"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical|right"

                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/timeReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:text="@string/receive_time"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View android:layout_width="0dp"

          android:layout_height="match_parent"
          android:layout_weight="1"/>

</LinearLayout>